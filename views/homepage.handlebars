{{> nav loggedIn=loggedIn}}
<div class="card-container">
{{#each posts as |post|}}
 <div class="card" data-id={{post.id}}>
  <div class="container">
    <h3>{{post.title}}</h3>
    <h5>Posted by {{post.user.username}} on {{formatDate post.date_created}} at {{formatTime post.date_created}}</h5>
    <p>{{post.content}}</p>
  </div>
</div> 

{{/each}}
</div>

<script src="/js/homepage.js"></script>