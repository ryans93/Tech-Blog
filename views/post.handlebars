{{> nav loggedIn=loggedIn}}

{{#if usersPost}}
<form id="editPostForm" data-id={{post.id}}> 
  <label for="title">Title:</label><br>
  <input type="text" id="title" name="title" value="{{post.title}}"><br>
  <label for="content">Content:</label><br>
  <textarea type="text" id="content" name="content">{{post.content}}</textarea><br><br>
  <input type="submit" value="Update Post" id="upDatePost">
</form> 

<button type="button" id="deletePost">Delete Post</button>

{{else}}
<h3>{{post.title}}</h3>
<h5>Posted by {{post.user.username}} on {{formatDate post.date_created}} at {{formatTime post.date_created}}</h5>
<p>{{post.content}}</p>
{{/if}}

{{#each post.comments as |comment|}}
    <p>{{comment.content}}</p>
    <h5>Posted by {{comment.user.username}} on {{formatDate comment.date_created}} at {{formatTime comment.date_created}}</h5>
{{/each}}

{{#if loggedIn}}
<form id="commentForm" data-id={{post.id}}> 
  <label for="content">Comment:</label><br>
  <textarea type="text" id="content" name="content"></textarea><br><br>
  <input type="submit" value="Add Comment" id="addComment">
</form> 
{{/if}}

<script src="/js/post.js"></script>